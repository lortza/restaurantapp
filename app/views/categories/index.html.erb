<p id="notice"><%= notice %></p>

<h1>Categories</h1>
<% if current_user_admin? %>
  <%= link_to 'New Category', new_category_path %>
<% end %><!-- current_user.admin? -->

<table>
  <tbody>
    <% @categories.order("name").each do |category| %>
      <tr>
        <td><%= link_to category.name, category %> (<%= category.restaurants.size %>)</td>
        <% if current_user_admin? %>
          <td><%= link_to 'Edit', edit_category_path(category) %></td>
          <td><%= link_to 'Delete', category, method: :delete, data: { confirm: "Are you sure you want to delete " + category.name + "? This action cannot be undone." } %></td>
        <% end %><!-- current_user_admin? -->
      </tr>
    <% end %>
  </tbody>
</table>