<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.street %><br>
  <%= @restaurant.address_secondline %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>

<p>
  <strong>Website:</strong>
  <%= @restaurant.website %>
</p>
<p><strong>Categories:</strong></p>
<ul>
    <% @categories.order("name").each do |category| %>
      <li><%= link_to category.name, category %></li>
    <% end %> <!-- categories -->
  </ul>
<p>
  <strong>Image file name:</strong>
  <%= image_for(@restaurant) %>
  [placeholder image code tbd]
</p>

<p>
  <strong>Price:</strong>
  <%= @restaurant.price %>
</p>

<p>
  <strong>Fave:</strong>
  <%= @restaurant.fave %>
  [boolean button tbd]
</p>

<p>
  <strong>Archive:</strong>
  <%= @restaurant.archive %>
  [boolean button tbd]
</p>

<p><strong>Favorite Dishes:</strong></p>
<p><%= link_to "Add a Dish", new_restaurant_dish_path(@restaurant) %></p>
<ul>
    <% @dishes.order("name").each do |dish| %>
      <li><%= dish.name %> | links | </li>
    <% end %> <!-- dishes -->
  </ul>

<p><strong>Recent Visits:</strong></p>
<p><%= link_to "Add a Visit", new_restaurant_outing_path(@restaurant) %></p>
  <ul>
    <% @outings.order("date DESC").each do |outing| %>
      <li><%= outing.date %><% if outing.note? %>, <%= outing.note %> <% end %> | links | </li>
    <% end %> <!-- outings -->
  </ul>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
