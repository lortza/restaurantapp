<article class="index-listing">
      <div class="index-image">
        <%= link_to image_for(restaurant), restaurant %>
      </div><!-- index-image -->
      <div class="index-info">
        <h2><%= link_to restaurant.name, restaurant %> 
        <% if restaurant.fave? %>
          <span class="fave-icon"><%= link_to " Fave", filtered_restaurants_path(:fave), class: "fa fa-star" %></span>
          <% end %></h2>
        <p><%= restaurant.street %> (map)</p>
        <p><%= restaurant.price %>, 
          <% restaurant.categories.limit(3).each do |category| %>
            <%= link_to category.name, category %>
          <% end %><!-- categories each -->
        </p>
      </div> <!-- index-info -->
    </article>