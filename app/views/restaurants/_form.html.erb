<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website %>
  </div>
  <div>
    <%= f.label :category, "Category" %><br>
    <%= f.collection_check_boxes(:category_ids, Category.all.order(name: :asc), :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :image_file_name %><br>
    <%= f.text_field :image_file_name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.select :price, Restaurant::PRICES, prompt: "Pick One" %>
  </div>
  <div class="field">
    <%= f.label :fave %><br>
    <%= f.check_box :fave %>
  </div>
  <div class="field">
    <%= f.label :archive %><br>
    <%= f.check_box :archive %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
