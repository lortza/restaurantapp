<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Price</th>
      <th>Fave</th>
      <th>Archive</th>
      <th colspan="2">Manage Listing</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= image_tag(restaurant.image_file_name) %></td>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= restaurant.street %><br>
        <%= restaurant.address_secondline %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.price %></td>
        <td><%= restaurant.fave %></td>
        <td><%= restaurant.archive %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

