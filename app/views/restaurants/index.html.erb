<%= content_for(:title, "Restaurants") %>

<p id="notice"><%= notice %></p>

<div class="pull-right">
  <%= link_to ' Add a Restaurant', new_restaurant_path, class: "fa fa-plus btn btn-sm btn-default" %> 
</div> <!-- pull-right -->

<h1><%= restaurant_filter_title %></h1>
<nav class="sub-nav">
  <ul>
    <li><%= nav_link_to 'All Restaurants', filtered_restaurants_path(:active) %></li>
    <li><%= nav_link_to "Faves", filtered_restaurants_path(:fave) %></li>
    <li><%= nav_link_to "Not Tried (NOT WORKING)", filtered_restaurants_path(:not_tried) %></li>
    <li><%= nav_link_to "Been a While", filtered_restaurants_path(:been_a_while) %></li>
    <li><%= nav_link_to "Archived", filtered_restaurants_path(:archived) %></li>
  </ul><!-- dropdown menu -->
</nav>

  <% @restaurants.each do |restaurant| %>
    <%= render :partial => "restaurant", :object => restaurant %>
  <% end %>

